#Шестнадцатиричные четные числа, не превышающие 2048 и содержащие более К цифр. 
#Вывести числа и их количество. Максимальное число вывести прописью.
import re  

#словарь
numbers_to_words = {
    '0': 'ноль',
    '1': 'один',
    '2': 'два',
    '3': 'три',
    '4': 'четыре',
    '5': 'пять',
    '6': 'шесть',
    '7': 'семь',
    '8': 'восемь',
    '9': 'девять',
    'a': 'десять',
    'b': 'одиннадцать',
    'c': 'двенадцать',
    'd': 'тринадцать',
    'e': 'четырнадцать',
    'f': 'пятнадцать'
}

#функция для преобразования шестнадцатеричного числа в прописной формат
def hex_to_words(hex_number):
    hex_number = hex_number[2:]  #убираем '0x'
    result = ""
    for digit in hex_number:  #проходим по каждой цифре в числе
        result += numbers_to_words[digit] + " "  #добавляем прописную форму цифры в результат
    return result.strip()  # убираем лишние пробелы в конце строки

#регулярное выражение для поиска шестнадцатеричных чисел
hex_regex = r"0x[02468acef][0-9a-f]{1,3}"

#открываем файл для чтения
with open("lab 1.txt", "r") as file:
    data = file.read() 

    #находим все шестнадцатеричные числа в тексте
    hex_numbers = re.findall(hex_regex, data)

   
    print("Найденные шестнадцатиричные числа и их количество:")
    for hex_num in hex_numbers:
        print(f"Число: {hex_num}, Прописью: {hex_to_words(hex_num)}, Количество цифр: {len(hex_num) - 2}")
    print(f"Всего найдено шестнадцатиричных чисел: {len(hex_numbers)}")
